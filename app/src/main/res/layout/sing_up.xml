<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:background="@color/BackGround">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Registrarse"
        android:textColor="@color/Text"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="60dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:cardBackgroundColor="@color/Card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de usuario"
                android:textColor="@color/Text"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Escribe tu username"
                android:inputType="text"
                android:textColorHint="@color/HintText" />
            <TextView
                android:id="@+id/outUsr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username vacio"
                android:textColor="@color/design_default_color_error"
                android:visibility="invisible"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Correo electronico"
                android:textColor="@color/Text"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:hint="Escribe tu E-mail"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/HintText" />
            <TextView
                android:id="@+id/outMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mail vacio"
                android:textColor="@color/design_default_color_error"
                android:visibility="invisible"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Contrase単a (6 carcteres minimo)"
                android:textColor="@color/Text"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Escribe Contrase単a"
                android:inputType="textPassword"
                android:textColorHint="@color/HintText" />

            <EditText
                android:id="@+id/veri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Verifica Contrase単a"
                android:inputType="textPassword"
                android:textColorHint="@color/HintText" />
            <TextView
                android:id="@+id/outPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contrase単a no valida"
                android:textColor="@color/design_default_color_error"
                android:visibility="invisible"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/acept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:layout_marginEnd="16sp"
        android:layout_marginTop="24sp"
        android:backgroundTint="@color/Button"
        android:text="Aceptar"
        android:textColor="@color/ButtonText"
        app:layout_constraintTop_toBottomOf="@id/cardView2"
        app:layout_constraintStart_toEndOf="@id/btnCancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="8sp"
        android:layout_marginTop="24sp"
        android:backgroundTint="@color/Button"
        android:text="Cancelar"
        android:textColor="@color/ButtonText"
        app:layout_constraintTop_toBottomOf="@id/cardView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/acept"
        app:layout_constraintHorizontal_weight="1"/>


</androidx.constraintlayout.widget.ConstraintLayout>